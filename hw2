// PROGRAM TO SWAP TOW VARIABLES USING THIRD VARIABLE
/*
#include <stdio.h>
int main() {
    int a, b, temp;
                                     // Input values for a and b
    printf("Enter the value of a: ");
    scanf("%d", &a);
    printf("Enter the value of b: ");
    scanf("%d", &b);

                                     // Display original values
    printf("Before swapping: a = %d, b = %d\n", a, b);

                                     // Swap the values using a third variable
    temp = a;
    a = b;
    b = temp;

                                     // Display swapped values
    printf("After swapping: a = %d, b = %d\n", a, b);

    return 0;
}*/

// PROGRAM TO SWAP TWO VARIABLES WITHOUT USING THIRD VARIABLE.
/*
#include <stdio.h>
int main() {
    int a, b;                       // Input values for a and b
    printf("Enter the value of a: ");
    scanf("%d", &a);
    printf("Enter the value of b: ");
    scanf("%d", &b);

                                    // Display original values
    printf("Before swapping: a = %d, b = %d\n", a, b);

                                    // Swap the values without using a third variable
    a = a + b;
    b = a - b;
    a = a - b;
                                    // Display swapped values
    printf("After swapping: a = %d, b = %d\n", a, b);

    return 0;
}*/

