// sum of digit 
#include<stdio.h>
int main()
{
    int a,b=0;
            printf("enter the value :");
                 scanf("%d",&a);

    int count = 0;
         while(a!=0)
         {   
                a=a%10;
                 b=b+a
                    count ++;  
                      printf("the sum of digits is %d",b);
             }
           
              
        
return 0; 
}
