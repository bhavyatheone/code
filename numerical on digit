// to print a reverse of number 
#include <stdio.h>
int main()
{
    int n,reversed =0;
     
    printf("enter the number:");
    scanf("%d",&n);
    while(n!=0)
    {
        int digit  =n%10;
        reversed=reversed*10+digit;
            n=n/10;

    }
printf("%d",reversed);   return 0;
}
