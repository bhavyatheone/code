// print increasing to decreaing 
#include <stdio.h>
void increasing(int x,int n)
{
    if(x>n) return;     
    printf("%d\n",x);   // base case 
    increasing(x+1,n);   //call 
    printf("%d\n",x);  // code
    return;
}
int main()
{
    int n;
    printf("enter a number :");
    scanf("%d",&n);
    increasing(1,n);
    return 0;
}
